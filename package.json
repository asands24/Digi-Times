{
  "name": "photo-newsletter-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@react-pdf/renderer": "^4.3.1",
    "@supabase/supabase-js": "^2.38.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/dompurify": "^3.0.5",
    "date-fns": "^2.29.3",
    "dompurify": "^3.3.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.4",
    "lucide-react": "^0.263.1",
    "openai": "^4.104.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.8.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:cov": "react-scripts test --coverage --watchAll=false",
    "clean": "node scripts/cleanup.js",
    "env:check": "DOTENV_CONFIG_PATH=.env.local node -r dotenv/config -e \"console.log('URL=', process.env.REACT_APP_SUPABASE_URL); console.log('KeyTail=', (process.env.REACT_APP_SUPABASE_ANON_KEY||'').slice(-10));\"",
    "env:init": "DOTENV_CONFIG_PATH=.env.local node -r dotenv/config -r ts-node/register/transpile-only -e \"import('./scripts/_supabaseClient.ts').then(()=>console.log('âœ… Supabase client init OK')).catch(e=>console.error(e.message));\"",
    "smoke:group": "DOTENV_CONFIG_PATH=.env.local node -r dotenv/config -r ts-node/register/transpile-only scripts/smoke-create-group.ts",
    "smoke:archive": "DOTENV_CONFIG_PATH=.env.local node -r dotenv/config -r ts-node/register/transpile-only scripts/smoke-archive.ts",
    "healthz:local": "curl -sS http://localhost:8888/.netlify/functions/healthz || curl -sS http://localhost:3000/api/healthz",
    "eject": "react-scripts eject"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/__tests__/**",
      "!src/**/*.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 40,
        "branches": 25,
        "functions": 30,
        "lines": 40
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.39",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/jspdf": "^1.3.3",
    "@types/node": "^24.7.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "autoprefixer": "^10.4.22",
    "baseline-browser-mapping": "^2.8.29",
    "jest": "^27.5.1",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  }
}
